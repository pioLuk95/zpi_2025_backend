{
  "info": {
    "name": "WSGmed API",
    "_postman_id": "6f1b48bb-5c5d-4c3e-8b2d-9b7b0d6f9e2a",
    "description": "Postman collection for WSGmed Laravel API (JWT auth).\n\nVariables:\n- baseUrl: e.g. http://127.0.0.1:8000\n- token: set automatically after Login/Refresh\n",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"p.lukaszewski95@gmail.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const body = pm.response.json();",
                  "// successResponse wrapper: { success, message, data: { access_token, ... } }",
                  "const token = body?.data?.access_token || body?.access_token;",
                  "if (token) {",
                  "  pm.collectionVariables.set('token', token);",
                  "  console.log('Saved token to collection variable token');",
                  "} else {",
                  "  console.warn('Token not found in response');",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/refresh",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "refresh"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const body = pm.response.json();",
                  "const token = body?.data?.access_token || body?.access_token;",
                  "if (token) {",
                  "  pm.collectionVariables.set('token', token);",
                  "  console.log('Updated token in collection variable token');",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/logout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "logout"
              ]
            }
          }
        },
        {
          "name": "Send Password Reset Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
